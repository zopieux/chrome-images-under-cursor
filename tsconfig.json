{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
