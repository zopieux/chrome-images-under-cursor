{
  "manifest_version": 2,
  "name": "__MSG_app_name__",
  "short_name": "IUC",
  "description": "__MSG_app_desc__",
  "version": "1.0.0",
  "author": "Alexandre Macabies",
  "homepage_url": "https://github.com/zopieux/images-under-cursor",
  "incognito": "spanning",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "webNavigation",
    "<all_urls>"
  ],
  "icons": {
    "16": "img/menu-icon.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.ts"
    ],
    "persistent": false
  },
  "commands": {
    "invoke": {
      "description": "__MSG_invoke_cmd_desc__",
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    }
  },
  "browser_action": {
    "default_icon": "img/icon-128.png",
    "default_title": "IUC",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": [
        "content-script.ts"
      ]
    }
  ],
  "web_accessible_resources": [
    "style.sass"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "images-under-cursor@zopi.eu"
    }
  }
}